@using MyBookLibrary.Service.ExtensionMethods
@model MyBookLibrary.Web.Models.ViewModels.BookListIndexViewModel

<section id="page-breadcrumb">
    <div class="vertical-center sun">
        <div class="container">
            <div class="row">
                <div class="action">
                    <div class="col-sm-12">
                        <h1 class="title">Book</h1>
                        <p>Book List</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--/#action-->
<section id="blog" class="padding-top">
    <div class="container">
        <div class="row">
            <div class="col-md-9 col-sm-7">
                @foreach (var book in Model.Books)
                {
                    <div class="row">
                        <div class="col-md-6 col-sm-12 blog-padding-right">
                            <div class="single-blog two-column">
                                <div class="post-thumb">
                                    <a href="blogdetails.html"><img src="@(Environment.GetEnvironmentVariable("environment") == "loc" ? $"data:image/jpeg;base64,{book.CoverHash}" : book.CoverUrl)" class="img-responsive book-list-summary-cover" alt=""></a>
                                    <div class="post-overlay">
                                        <span class="uppercase"><a href="#">14 <br><small>Feb</small></a></span>
                                    </div>
                                </div>
                                <div class="post-content overflow">
                                    <h2 class="post-title bold"><a href="blogdetails.html">@book.Name</a>
                                    </h2>
                                    <h3 class="post-author"><a href="#">@book.Author.ConcatAuthor()</a>
                                    </h3>
                                    <div class="post-bottom overflow">
                                        <ul class="nav nav-justified post-nav">
                                            <li><a href="#"><i class="fa fa-check"></i>@(book.DateCompleted?.ToString("dd-MMM-yyyy") ?? "Unknown")</a></li>
                                            <li><a href="#"><i class="fa fa-book"></i>@book.Pages pages</a></li>
                                            <li><a href="#"><i class="fa fa-clock-o"></i>@book.Minutes</a></li>
                                            <li><a href="#"><i class="fa fa-heart"></i>@(book.Ratings?.ToString() ?? "No Ratings")</a></li>
                                            <li><a href="#"><i class="fa fa-calendar"></i>@(book.ReleaseDate?.Year.ToString() ?? "Unknown")</a></li>
                                        </ul>
                                    </div>
                                    <p>@Html.Raw(book.Description)</p>
                                    @*<a href="#" class="read-more">View More</a>*@
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <div class="blog-pagination">
                    <ul class="pagination">
