@using MyBookLibrary.Common
@using MyBookLibrary.Service.ExtensionMethods
@model MyBookLibrary.Web.Models.ViewModels.BookListIndexViewModel
    
<section id="page-breadcrumb">
    <div class="vertical-center sun">
        <div class="container">
            <div class="row">
                <div class="action">
                    <div class="col-sm-12">
                        <h1 class="title">Library</h1>
                        <table class="table table-striped table-bordered table-condensed table-responsive">
                            <thead>
                            <tr>
                                <td>&nbsp;</td>
                                <td>Name</td> 
                                <td>Date Completed</td> 
                                <td>Pages</td>
                                <td>Minutes</td>
                                <td>Days</td>
                                <td>Badges</td>
                            </tr>
                            </thead>
                            @foreach (var book in Model.Books)
                            {
                                <tr>
                                    <td>@Html.Partial("_BookCoverShadow", book)</td>
                                    <td><b>@book.Name</b><br/><br/>@book.Author.ConcatAuthor()</td>
                                    <td>@(book.DateCompleted?.ToString("dd/MM/yyyy"))</td>
                                    <td>@book.Pages</td>
                                    <td>@(book.Minutes.ConvertMinuteToHoursMinutes())</td>
                                    <td>@book.DaysTaken</td>
                                    <td>@Html.Partial("_BookAwards", book)</td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--/#action-->
