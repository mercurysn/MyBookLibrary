@using System.Web.Mvc.Html
@using MyBookLibrary.Service.ExtensionMethods
@model List<MyBookLibrary.Service.Model.Book>


<section id="page-breadcrumb">
    <div class="vertical-center sun">
        <div class="container">
            <div class="row">
                <div class="action">
                    <div class="col-sm-12">
                        <h1 class="title">Books</h1>
                        <table class="table table-striped table-bordered table-condensed table-responsive">
                            <thead>
                            <tr>
                                <td>Rank</td>
                                
                                <td></td>
                                <td>Name</td>
                                <td>Stats</td>
                            </tr>
                            </thead>
                            @{ int rank = 1; }
                            @foreach (var book in Model)
                            {
                                <tr>
                                    <td>#@rank</td>
                                    <td>
                                        @Html.Partial("_BookCoverShadow", book)
                                    </td>
                                    <td>
                                        <br/>
                                        <b>@book.Name</b><br/><br/>
                                        @book.Author.ConcatAuthor()<br/><br/>
                                        @*<progress class="progress-bar-danger" value="@book.MinutesRankPercentile" max="100">

                                        </progress><br/>*@
                                        @book.Minutes.ConvertMinuteToHoursMinutes()
                                    </td>
                                    <td>
                                        @book.Minutes.ConvertMinuteToHoursMinutes()
                                        <br /><br />
                                        @book.Pages.ToString("#,##0") pages
                                        <br /><br />
                                        @book.Minutes minutes
                                        <br /><br />
                                        @book.MinutesPerDay minutes per day
                                        <br /><br />
                                        @Html.Partial("_BookAwards", book)
                                    </td>
                                </tr>

                                rank++;
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--/#action-->
