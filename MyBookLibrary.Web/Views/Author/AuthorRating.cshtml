@using MyBookLibrary.Common
@using MyBookLibrary.Service.ExtensionMethods
@model MyBookLibrary.Web.Models.ViewModels.AuthorViewModel

<section id="page-breadcrumb">
    <div class="vertical-center sun">
        <div class="container">
            <div class="row">
                <div class="action">
                    <div class="col-sm-12">
                        <h1 class="title">Book Authors</h1>
                        <table class="table table-striped table-bordered table-condensed table-responsive">
                            <thead>
                                <tr>
                                    <td>Author</td>
                                    <td>Stats</td>
                                    <td>Avg Rating</td>
                                    <td>Books</td>
                                </tr>
                            </thead>
                            @foreach (var author in Model.Authors)
                            {
                                <tr>

                                    <td><b>@author.Name</b><br/><br /></td>
                                    <td>
                                        @author.Minutes.ConvertMinuteToHoursMinutes()
                                        <br/><br/>
                                        @author.Pages.ToString("#,##0") Pages
                                        <br/><br/>
                                        @author.Count
                                    </td>
                                    <td>@author.AvgRating.ToDecimalPlace(1).ToString("0.0") Stars</td>
                                    <td>
                                        @foreach (var book in author.Books)
                                        {
                                            @Html.Partial("_BookCoverShadowSmall", book)
                                        }
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--/#action-->
